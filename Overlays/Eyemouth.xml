<Overlay Width="1920" Height="1080" >
  <Any>
    <Triggers>
      <Trigger Factory="JoystickActivated" Name="JSActivated" />
      <Trigger Factory="JoystickInactive" Name="JSLost" TimeoutS="120" />
      <Trigger Factory="JoystickButton" Name="A" Button="A" />
      <!-- <Trigger Factory="JoystickButton" Name="B" Button="B" /> -->
      <Trigger Factory="JoystickButton" Name="X" Button="X" />
      <Trigger Factory="JoystickButton" Name="Y" Button="Y" />
      <Trigger Factory="JoystickButton" Button="RightShoulder" Name="R" />
      <Trigger Factory="JoystickButton" Button="LeftShoulder" Name="L" />
	  <Trigger Factory="SkeletonLost" Timeout="30000" Name="IdleTrigger" />
      <Trigger Factory="SkeletonLost" Timeout="459000" Name="VideoIdleTrigger" />
      <Trigger Factory="SkeletonFound" Name="SkeletonFound" />
	  <Trigger Factory="JoystickButton" Button="Start" Name="ExitWorld" />
	  <Trigger Factory="JoystickButton" Button="Back" Name="ForceIdle" />
	  <Trigger Factory="Timer" Name="IntroTimer" LengthMS="5000" />
	  <Trigger Factory="Timer" Name="VideoTimer" LengthMS="1000" />
	  <Trigger Factory="Timer" Name="VideoTimer2" LengthMS="1000" />
    </Triggers>

    <TransitionStyles>
			<Transition Factory="Cut" Name="Cut" />
		</TransitionStyles>
	  
	  <State Factory="Blank" Name="Splash">
        <IdleTransition Name="Cut" />
        <SplashTransition Name="Cut" />
        <Features>
          <Feature Name="SplashSkeleton" Frame="MainWindow" />
          <Feature Factory="Image" X="0" Y="0" W="1920" H="1080" Frame="MainWindow">Images/MenuBGs/Eyemouth-Splash.png</Feature>
        </Features>
      </State>
	  
	  <States>
          <State Factory="Blank" Name="Idle" EnableCursor="false" Idle="true" Start="true" >
        <Features>
          <Feature Factory="Image" X="0" Y="0" W="1920" H="1080" Frame="MainWindow">Images/MenuBGs/Caen-Outro.png</Feature>
		  <Feature Factory="KeyPress" Keys="^+h" Frame="MainWindow"></Feature>
        </Features>
        <IdleTriggers>
          <Trigger Name="IdleTrigger" />
		  <Trigger Name="ForceIdle" />
        </IdleTriggers>
        <IdleTransition Name="FadeIn" />
      </State>
	  
	  <State Factory="KinectControl" Name="Explore" Avatar="true">
		<Features>
          <Feature Factory="JoystickClick" LeftClick="true" Name="JoystickClick">
			<Triggers>
				<Trigger Factory="JoystickButton" Name="B" Button="B" />
			</Triggers>
		  </Feature>
        </Features>
		<IdleTriggers>
          <Trigger Name="IdleTrigger" />
		  <Trigger Name="ForceIdle" />
        </IdleTriggers>
	  </State>
	  
	  <State Factory="Blank" Name="Intro" EnableCursor="false" >
        <Features>
          <Feature Factory="Image" X="0" Y="0" W="1920" H="1080" Frame="MainWindow">Images/MenuBGs/Caen-Intro.png</Feature>
        </Features>
        <IdleTransition Name="FadeIn" />
      </State>
	  
	  <State Factory="Video" Name="Instruction" BlackBG="true" File="Videos/Instruction.mp4" FinishState="Explore" Transition="Cut" Frame="MainWindow" >
        <IdleTriggers>
          <Trigger Name="VideoIdleTrigger" />
        </IdleTriggers>
      </State>
	  
	  <State Factory="Video" Name="Flythrough" BlackBG="true" File="Videos/Flythrough.mp4" FinishState="Instruction" Transition="Cut" Frame="MainWindow" >
        <IdleTriggers>
          <Trigger Name="VideoIdleTrigger" />
        </IdleTriggers>
      </State>
    </States>

    <Transitions>
	  <Transition From="Idle" To="Intro" Transition="FadeIn" Trigger="SkeletonFound" />
	  <Transition From="Idle" To="Intro" Transition="FadeIn" Trigger="JSActivated" />
	  <Transition From="Intro"			To="Flythrough" Transition="FadeOut" Trigger="IntroTimer" />
      <Transition From="Intro"			To="Splash" Transition="Cut" Trigger="ExitWorld" />
      <Transition From="Flythrough" 	To="Splash" Transition="FadeIn" Trigger="ExitWorld" />
	  <!--<Transition From="Flythrough"			To="Instruction" Transition="FadeOut" Trigger="VideoTimer" />-->
      <Transition From="Instruction"	To="Splash" Transition="FadeIn" Trigger="ExitWorld" />
	   <!--<Transition From="Instruction"			To="Explore" Transition="FadeOut" Trigger="VideoTimer2" />-->
	  <Transition From="Explore"		To="Splash" Transition="FadeIn" Trigger="ExitWorld" />
    </Transitions>
  </Any>

  <!-- Settings specific to the overlay being instantiated based on click interactions -->

  <ClickBased>
    <States>

    </States>
    <Transitions>
      <Transition From="Splash" To="Explore" Transition="Cut" Trigger="X" />
    </Transitions>
  </ClickBased>

  <!-- Settings specific to the overlay being instantiated based on hover interactions -->

  <HoverBased>
    <Features>
    </Features>
    <States>
      
    </States>
    <Transitions>

      <InvisibleTransition From="Splash" To="Explore"  Transition="FadeOut"    L="266" T="273" R="762" B="366" Frame="MainWindow" Renderer="DialCursor" />
	  <!--<InvisibleTransition From="Splash" To="Slideshow" Transition="FadeOut"    L="274" T="404" R="769" B="495" Frame="MainWindow" Renderer="DialCursor" />
	  <TextTransition     From="Splash" To="ExploreA"  Transition="FadeOut"    X="96" Y="918" Frame="MainWindow" Renderer="DialCursor">Walk around the fort</TextTransition>-->
    </Transitions>
  </HoverBased>
</Overlay>
