<Overlay Width="1920" Height="1080" >
  <Any>
    <Features>
      <Feature Factory="StaticText" Name="1" X="25" Y="850" Font="Verdana" Colour="Yellow" Size="25">This model is a recreation of the township of Caen, approximately 2km up the strath.</Feature>
      <Feature Factory="StaticText" Name="2" X="25" Y="900" Font="Verdana" Colour="Yellow" Size="25">Caen was cleared around 200 years ago and many of the inhabitants were relocated to Helmsdale.</Feature>
      <Feature Factory="StaticText" Name="3" X="25" Y="950" Font="Verdana" Colour="Yellow" Size="25">If you would like to explore the model, a larger, interactive, version is available in the museum.</Feature>
      <Feature Factory="StaticText" Name="4" X="25" Y="1000" Font="Verdana" Colour="Yellow" Size="25">If you have any questions or feedback ask at reception/the kitchen for John.</Feature>
    </Features>

    <Triggers>
      <Trigger Factory="JoystickActivated" Name="JSActivated" />
      <Trigger Factory="JoystickInactive" Name="JSLost" TimeoutS="240" />
      <Trigger Factory="JoystickButton" Name="A" Button="A" />
      <Trigger Factory="JoystickButton" Name="B" Button="B" />
      <Trigger Factory="JoystickButton" Name="X" Button="X" />
      <Trigger Factory="JoystickButton" Name="Y" Button="Y" />
      <Trigger Factory="JoystickButton" Button="RightShoulder" Name="R" />
      <Trigger Factory="JoystickButton" Button="LeftShoulder" Name="L" />
    </Triggers>

    <TransitionStyles>
      <Transition Factory="Cut" Name="Cut" />
    </TransitionStyles>

    <States>

      <State Factory="Explore" Name="Flycam" Avatar="false" Start="true" X="100" Y="100" Z="100" >
        <Features>
          <Feature Name="1" />
          <Feature Name="2" />
          <Feature Name="3" />
          <Feature Name="4" />
        </Features>
      </State>

      <State Factory="Explore" Name="Avatar" Avatar="true" Start="true" X="100" Y="100" Z="100" >
        <Features>
          <Feature Name="1" />
          <Feature Name="2" />
          <Feature Name="3" />
          <Feature Name="4" />
        </Features>
      </State>

      <State Factory="Flythrough" Name="IdleFlythrough" File="Flythroughs/Timespan/Guided-Loop.xml" Idle="true" Start="true" >
        <Features>
          <Feature Name="1" />
          <Feature Name="2" />
          <Feature Name="3" />
          <Feature Name="4" />
        </Features>
        <IdleTriggers>
          <Trigger Name="JSLost" />
          <Trigger Name="A" />
        </IdleTriggers>
      </State>

    </States>

    <Transitions>
    </Transitions>
  </Any>

  <!-- Settings specific to the overlay being instantiated based on click interactions -->

  <ClickBased>
    <States>

    </States>
    <Transitions>

      <Transition From="IdleFlythrough" To="Avatar" Transition="Cut" Trigger="JSActivated" />
      <Transition From="IdleFlythrough" To="Avatar" Transition="Cut" Trigger="X" />
      <Transition From="IdleFlythrough" To="Flycam" Transition="Cut" Trigger="B" />

      <Transition From="Avatar" To="Flycam" Transition="Cut" Trigger="B" />
      <Transition From="Flycam" To="Avatar" Transition="Cut" Trigger="X" />

    </Transitions>
  </ClickBased>

  <!-- Settings specific to the overlay being instantiated based on hover interactions -->

  <HoverBased>
    <Features>
    </Features>
    <States>

    </States>
    <Transitions>

    </Transitions>
  </HoverBased>
</Overlay>
