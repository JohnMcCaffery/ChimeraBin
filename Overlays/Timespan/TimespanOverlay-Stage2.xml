				</Features>
			</State>
			<!-- 			Story 3 (Frakkok) - Confirm 			-->
			<State Factory="Blank" Name="Story3Confirm" BlackBG="true">
				<Features>
					<Feature Factory="Image" Frame="MainWindow" X="0" Y="0" W="1920" H="1080">Images/StorytellingVideos/ConfirmFrakkok.png</Feature>
				</Features>
			</State>
			<!-- 			Story 4 (Fisherman) - Confirm 			-->
			<State Factory="Blank" Name="Story4Confirm" BlackBG="true">
				<Features>
					<Feature Factory="Image" Frame="MainWindow" X="0" Y="0" W="1920" H="1080">Images/StorytellingVideos/ConfirmFisherman.png</Feature>
				</Features>
			</State>
			<!-- 			Story 5 (Wolf) - Confirm 			-->
			<State Factory="Blank" Name="Story5Confirm" BlackBG="true">
				<Features>
					<Feature Factory="Image" Frame="MainWindow" X="0" Y="0" W="1920" H="1080">Images/StorytellingVideos/ConfirmWolf.png</Feature>
				</Features>
			</State>

			<!-- 			Story 1 (Dogs)  			-->
