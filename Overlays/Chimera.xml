<Overlay Width="1920" Height="1080" >
  <Any>
    <Features>

    </Features>
    
    <SelectionRenderers>
      <Renderer Factory="Cursor" Name="DialCursor" InnerRenderer="Dial" Radius="40" Colour="Red" Frame="MainWindow" />
    </SelectionRenderers>

    <TransitionStyles>
			<Transition Factory="BitmapTransition" Name="BitmapFade" Length="2000" Style="Fade" />
			<Transition Factory="OpacityTransition" Name="FadeOut" Length="2000" FadeOut="true" />
			<Transition Factory="OpacityTransition" Name="FadeIn" Length="2000" FadeOut="false" />
		</TransitionStyles>

    <States>
	
   <State Factory="JoystickControl" Name="JoystickAvatar" Avatar="true" Start="true" Idle="true" >
        <Features>
		
          <Feature Factory="Say" Name="ClickFeture" Message="avatar" Channel="1" Frame="MainWindow">
			<Triggers>
				<Trigger Factory="JoystickButton" Name="B" Button="B" />
			</Triggers>
		  </Feature>
		  <Feature Factory="Say" Name="EyemouthFeture" Message="Eyemouth 1/264/556/46" Channel="2" Frame="MainWindow">
			<Triggers>
				<Trigger Factory="JoystickButton" Name="A" Button="A" />
			</Triggers>
		  </Feature>
		  <Feature Factory="Say" Name="TimespanFeture" Message="Timespan 1/333/249/53" Channel="2" Frame="MainWindow">
			<Triggers>
				<Trigger Factory="JoystickButton" Name="Y" Button="Y" />
			</Triggers>
		  </Feature>
		  <Feature Factory="Say" Name="ClickCameraFeture" Message="camera" Channel="1" Frame="MainWindow">
			<Triggers>
				<Trigger Factory="JoystickButton" Name="X" Button="X" />
			</Triggers>
		  </Feature>
		  
        </Features>
		
      </State>
	  
    </States>

    <Transitions>

    </Transitions>
  </Any>

