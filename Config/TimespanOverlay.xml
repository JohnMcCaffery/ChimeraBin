      <State Factory="Flythrough" Name="GuidedTour" File="Flythroughs/Caen-Guided.xml" Stepping="true" DisplaySubtitles="true" SubtitleTimeout="5">

	      <StepText Window="MainWindow" Font="Verdana" Size="50" Color="Red" Style="Bold" Colour="Red" X="50" Y="50" />
	      <SubtitleText Window="MainWindow" Font="Verdana" Size="30" Color="Red" Style="Bold" Colour="Red" X="960" Y="900" Alignment="TopCenter" />

	      <Triggers>
          <ImageTrigger X="1532" Y="918" File="Images/Buttons/Next.png" Renderer="Cursor" />
        </Triggers>

	      <Steps>
		      <Step Step="0" Voiceover="C:\Users\Iain\Music\An Awesome Wave (converted)\01 Intro.m4a">
			      <Image File="Images/GuidedTour/DemoFlythroughStepImage.png" X="700" Y="50"/>
			      <Subtitles>
				      <Subtitle>First Subtitle</Subtitle>
				      <Subtitle Time="5">Second Subtitle</Subtitle>
			      </Subtitles>
		      </Step>
	      </Steps>
      </State>
      </States>
      <Transitions>
	      <InvisibleTransition From="Splash" To="GuidedTour"    Transition="FadeOut"    L="1080" T="415" R="1755" B="500" />
        <!--<InvisibleTransition From="Splash" To="KinectAvatar"  Transition="FadeOut"    L="1080" T="535" R="1755" B="620" />-->
	      <InvisibleTransition From="Splash" To="Slideshow"     Transition="BitmapFade" L="1080" T="645" R="1755" B="735" />
	      <!--<InvisibleTransition From="Splash" To="KinectFlycam"  Transition="FadeOut"    L="1080" T="765" R="1755" B="865" /> -->

	      <Transition From="Idle" 		To="Splash" Transition="FadeIn" Trigger="SkeletonFound" />
	      <ImageTransition From="GuidedTour" 	To="Splash" Transition="FadeIn" X="96" Y="918" File="Images/Buttons/Back.png" />
	      <ImageTransition From="Slideshow" 	To="Splash" Transition="BitmapFade" X="864" Y="918" File="Images/Buttons/BackTrans.png" />

	      <InvisibleTransition From="Splash" To="Story1Confirm" 	Transition="BitmapFade" L="115" T="395" R="835" B="485" />
