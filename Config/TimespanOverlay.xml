	      <InvisibleTransition From="Splash" To="Story5Confirm" 	Transition="BitmapFade" L="115" T="860" R="835" B="955" />

	      <InvisibleTransition From="Story1Confirm" To="Splash" Transition="BitmapFade" L="320" T="380" R="770" B="665" />
	      <InvisibleTransition From="Story2Confirm" To="Splash" Transition="BitmapFade" L="320" T="380" R="770" B="665" />
	      <InvisibleTransition From="Story3Confirm" To="Splash" Transition="BitmapFade" L="320" T="380" R="770" B="665" />
	      <InvisibleTransition From="Story4Confirm" To="Splash" Transition="BitmapFade" L="320" T="380" R="770" B="665" />
	      <InvisibleTransition From="Story5Confirm" To="Splash" Transition="BitmapFade" L="320" T="380" R="770" B="665" />

	      <InvisibleTransition From="Story1Confirm" To="Story1" Transition="BitmapFade" L="960" T="380" R="1410" B="665" />
	      <InvisibleTransition From="Story2Confirm" To="Story2" Transition="BitmapFade" L="960" T="380" R="1410" B="665" />
	      <InvisibleTransition From="Story3Confirm" To="Story3" Transition="BitmapFade" L="960" T="380" R="1410" B="665" />
	      <InvisibleTransition From="Story4Confirm" To="Story4" Transition="BitmapFade" L="960" T="380" R="1410" B="665" />
	      <InvisibleTransition From="Story5Confirm" To="Story5" Transition="BitmapFade" L="960" T="380" R="1410" B="665" />
