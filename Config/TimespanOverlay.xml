<Overlay Width="1920" Height="1080" >
	<Any>
		<Triggers>
			<Trigger Factory="SkeletonLost" Timeout="30000" Name="SkeletonLost" />
			<Trigger Factory="SkeletonFound" Name="SkeletonFound" />
		</Triggers>

		<TransitionStyles>
			<Transition Factory="BitmapTransition" Name="BitmapFade" Length="2000" Style="Fade" />
			<Transition Factory="OpacityTransition" Name="FadeOut" Length="2000" FadeOut="true" />
			<Transition Factory="OpacityTransition" Name="FadeIn" Length="2000" FadeOut="false" />
		</TransitionStyles>

		<States>
			<State Factory="ImageBG" Name="Splash" Splash="true">
				<window Window="MainWindow" File="Images/MenuBGs/Caen-Splash.png" Splash="True"/>
			</State>

			<State Factory="Flythrough" Name="Idle" File="/Flythroughs/Caen-long.xml" Idle="true">
				<IdleTrigger Factory="SkeletonLost" />
				<IdleTransition Transition="FadeOut" />
				<SplashTransition Transition="FadeIn" />
			</State>

			<State Factory="Slideshow" Name="Slideshow" Folder="Images/TodaySlideshow/" Transition="Fade" >
				<NextTriggers>
					<ImageTrigger X="1532" Y="918" File="Images/Buttons/NextTrans.png" />
				</NextTriggers>
				<PrevTriggers>
					<ImageTrigger X="96" Y="918" File="Images/Buttons/PrevTrans.png" />
				</PrevTriggers>
			</State>

			<State Factory="ImageBG" Name="Story1Confirm" > <window Window="MainWindow" File="Images/StorytellingVideos/ConfirmDogs.png" Splash="True"/> </State>
			<State Factory="ImageBG" Name="Story2Confirm" > <window Window="MainWindow" File="Images/StorytellingVideos/ConfirmGartymore.png" Splash="True"/> </State>
			<State Factory="ImageBG" Name="Story3Confirm" > <window Window="MainWindow" File="Images/StorytellingVideos/ConfirmFrakkok.png" Splash="True"/> </State>
			<State Factory="ImageBG" Name="Story4Confirm" > <window Window="MainWindow" File="Images/StorytellingVideos/ConfirmFisherman.png" Splash="True"/> </State>
			<State Factory="ImageBG" Name="Story5Confirm" > <window Window="MainWindow" File="Images/StorytellingVideos/ConfirmWolf.png" Splash="True"/> </State>

			<State Factory="Video" Name="Story1" File="Videos/Dogs.m4v" FinishState="Splash" Transition="BitmapFade" />
			<State Factory="Video" Name="Story2" File="Videos/Garyore.mp4" FinishState="Splash" Transition="BitmapFade" />
			<State Factory="Video" Name="Story3" File="Videos/Orkney.mp4" FinishState="Splash" Transition="BitmapFade" />
			<State Factory="Video" Name="Story4" File="Videos/Fisherman.mp4" FinishState="Splash" Transition="BitmapFade" />
			<State Factory="Video" Name="Story5" File="Videos/Wolf.mp4" FinishState="Splash" Transition="BitmapFade" />

			<!--
      <State Factory="Video" Name="Video" File="E:\Video\Edit\Out\vid.mpg" FinishState="None" L="310" T="310" R="790" B="590" RestartMode="true">
