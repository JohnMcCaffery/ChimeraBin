	      <InvisibleTransition From="Story2Confirm" To="Splash" Transition="BitmapFade" L="960" T="380" R="1410" B="665" />
	      <InvisibleTransition From="Story3Confirm" To="Splash" Transition="BitmapFade" L="960" T="380" R="1410" B="665" />
	      <InvisibleTransition From="Story4Confirm" To="Splash" Transition="BitmapFade" L="960" T="380" R="1410" B="665" />
