<Overlay Width="1920" Height="1080" >
	<Any>
		<Triggers>
			<Trigger Type="SkeletonLost" Timeout="30000" Name="SkeletonLost" />
			<Trigger Type="SkeletonFound" Name="SkeletonFound" />
		</Triggers>

		<TransitionStyles>
			<Transition Type="BitmapTransition" Name="BitmapFade" Length="2000" Style="Fade" />
			<Transition Type="OpacityTransition" Name="FadeOut" Length="2000" FadeOut="true" />
			<Transition Type="OpacityTransition" Name="FadeIn" Length="2000" FadeOut="false" />
		</TransitionStyles>

		<States>
			<State Type="ImageBG" Name="Splash" Splash="true">
				<window Window="MainWindow" File="/MenuBGs/ExampleBG.png" Splash="True"/>
			</State>

			<State Type="Flythrough" Name="Idle" File="/Flythroughs/Caen-long.xml" Idle="true">
				<IdleTrigger Type="SkeletonLost" />
				<IdleTransition Transition="FadeOut" />
				<SplashTransition Transition="FadeIn" />
			</State>

			<State Type="Slideshow" Name="Slideshow" Folder="Images/TodaySlideshow/" >
				<NextTriggers>
					<ImageTrigger X="1632" Y="918" File="Images/Buttons/NextTrans.png" />
				</NextTriggers>
				<PrevTriggers>
					<ImageTrigger X="96" Y="918" File="Images/Buttons/PrevTrans.png" />
				</PrevTriggers>
			</State>

			<State Type="ImageBG" Name="Story1Confirm" > <window Window="MainWindow" File="/StorytellingVideos/ConfirmDogs.png" Splash="True"/> </State>
			<State Type="ImageBG" Name="Story2Confirm" > <window Window="MainWindow" File="/StorytellingVideos/ConfirmGartymore.png" Splash="True"/> </State>
			<State Type="ImageBG" Name="Story3Confirm" > <window Window="MainWindow" File="/StorytellingVideos/ConfirmFrakkok.png" Splash="True"/> </State>
			<State Type="ImageBG" Name="Story4Confirm" > <window Window="MainWindow" File="/StorytellingVideos/ConfirmFishmeran.png" Splash="True"/> </State>
			<State Type="ImageBG" Name="Story5Confirm" > <window Window="MainWindow" File="/StorytellingVideos/ConfirmWolf.png" Splash="True"/> </State>

			<State Type="Video" Name="Story1" File="/Videos/dogs.m4v" FinishState="Splash" />
			<State Type="Video" Name="Story2" File="/Videos/garyore.m4v" FinishState="Splash" />
			<State Type="Video" Name="Story3" File="/Videos/orkney.m4v" FinishState="Splash" />
			<State Type="Video" Name="Story4" File="/Videos/fisherman.m4v" FinishState="Splash" />
			<State Type="Video" Name="Story5" File="/Videos/wolf.m4v" FinishState="Splash" />

