      <State Type="Flythrough" Name="GuidedTour" File="/Flythroughs/Caen-Guided.xml" Stepping="true" DisplaySubtitles="true" SubtitleTimeout="20">

	      <StepTextSetup Window="MainWindow" Font="Verdana" Size="50" Color="Red" Style="Bold" Colour="Red" X="200" Y="200" />
	      <SubtitleTextSetup Window="MainWindow" Font="Verdana" Size="30" Color="Red" Style="Bold" Colour="Red" X="200" Y="800" Alignment="TopMiddle" />

	      <Triggers>
			<ImageTrigger X="1632" Y="918" File="Images/Buttons/Next.png" />
	      </Triggers>

	      <Steps>
		      <Step Step="0" Voiceover="C:\Users\Iain\Music\An Awesome Wave (converted)\01 Intro.m4a">
			      <Image File="/Images/GuidedTour/DemoFlythroughGuidedTourImage.png" X="700" Y="50"/>
			      <Subtitles>
				      <Subtitle>First Subtitle</Subtitle>
				      <Subtitle Time="5">Second Subtitle</Subtitle>
			      </Subtitles>
		      </Step>
	      </Steps>
      </State>
      </States>
      <Transitions>
	      <InvisibleTransition From="Splash" To="GuidedTour" Transition="FadeOut" L="960" T="380" R="1410" B="665" />

	      <ImageTransition From="Idle" 		To="Splash" Transition="FadeIn" Trigger="SkeletonFound" />
	      <ImageTransition From="GuidedTour" 	To="Splash" Transition="FadeIn" X="96" Y="918" File="/Images/Buttons/Back.png" />
	      <ImageTransition From="Slideshow" 	To="Splash" Transition="BitmapFade" X="864" Y="918" File="/Images/Buttons/BackTrans.png" />

	      <InvisibleTransition From="Splash" To="Confirm1" 	Transition="BitmapFade" L="115" T="395" R="835" B="485" />
